.search-form
	width 292px
	height 41px
	+r(1319px)
		width 100%
	+r($l)
		width 100%
	&__form
		position relative
		display block
		height 100%
	&__input
		border none
		padding-left 20px
		padding-right 40px
		width 100%
		height 100%
		border-radius 5px
		background-color #eeeeee
		color #292929
		font-size 14px
		+placeholder()
			color #292929
		&:focus
			border 2px solid #4cbaba
	&__submit
		position absolute
		top 50%
		right 12px
		margin-top -9px
		border none
		background #eeeeee
	&__submit-icon
		width 18px
		height 18px
		fill #8b8b8b
