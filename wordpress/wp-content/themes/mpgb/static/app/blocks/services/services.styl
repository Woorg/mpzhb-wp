.services
	display block
	background #eeeeee
	overflow hidden
	&__in
		padding-top 70px
		padding-bottom 70px
		+r($l)
			padding-top 44px
			padding-bottom 44px
		+r($t)
			padding-top 40px
			padding-bottom 40px
	&__title
		margin-bottom 43px
		@extends .title
		text-align center
		+r($m)
			margin-bottom 31px
	&__list
		clr()
	&__item
		+r($l)
			margin-bottom 20px
		&:last-child
			+r($m)
				margin-bottom 0
	&__item_1
		.services__icon
			top 8px
			width 68px
			height 65px
	&__item_2
		.services__icon
			top 12px
			width 68px
			height 54px
	&__item_3
		.services__icon
			top 7px
			left 10px
			width 47px
			height 68px
	&__icon
		position absolute
		top 0
		left 0
		fill #4cbaba
	&__link
		position relative
		padding-left 96px
		display block
		color #292929
		text-decoration none
		&:hover,
		&:focus
			color #292929
			text-decoration none
			.services__item-title
				text-decoration none
	&__item-title
		margin-bottom 10px
		font-size 18px
		line-height 28px
		text-decoration underline
		text-transform uppercase
		letter-spacing tracking(-25, 18)
		+r($t)
			font-size 12px
			line-height 17px
	&__item-text
		letter-spacing tracking(-25, 16)
		text-transform lowercase
