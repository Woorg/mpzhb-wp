.nav
	display inline-block
	vertical-align middle
	+r($t)
		display block
	&__trigger
		border 1px solid #404040
		margin-top 10px
		margin-bottom 10px
		padding-top 7px
		padding-right 20px
		padding-bottom 6px
		padding-left 20px
		height 40px
		display none
		font-family $mM
		font-weight normal
		font-size 14px
		color #292929
		text-transform uppercase
		text-align left
		cursor pointer
		border-radius 5px
		clr()
		+r($t)
			display block
		&.nav__trigger_active
			+r($t)
				border-bottom none
				margin-bottom 0
	&__trigger-text,
	&__trigger-icon
		display inline-block
		vertical-align middle
	&__trigger-text
		margin-right 5px
	&__trigger-icon
		margin-top 5px
		float right
		width 12px
		height 14px
		fill #292929
	&__checkbox
		display none
		+r($t)
			&:checked +
				.nav__list
					margin-top -3px
					padding-left 20px
					padding-right 20px
					display block
					background #f1f1f1
					text-align left
					border 1px solid #404040
					border-top none
					border-radius 0 0 5px 5px
					.nav__item,
					.nav li
						display block
						text-align center
					.nav__link,
					.nav a
						width 100%
						padding-left 0
						padding-right 0
						text-align left
						+r($m)
							width 100%
						&:after
							right 0
					.subnav
						padding-top 0
						padding-right 0
						padding-bottom 0
						padding-left 0
						background #f1f1f1
						box-shadow none
					// .subnav__subnav-list
					// 	display none
	&__list
		font-size 0
		+r($t)
			display none
	&__item,
	li
		display inline-block
		vertical-align middle
		+r($t)
			width 100%
			text-align center
		&:hover,
		&:focus
			.subnav
				display block
	&__link,
	a
		position relative
		padding-top 18px
		padding-right 50px
		padding-bottom 17px
		display block
		color #292929
		font-size 18px
		font-family $mM
		font-weight normal
		text-decoration none
		text-transform uppercase
		tr(all .3s ease)
		+r($t)
			margin-left 0
			padding-top 10px
			padding-right 0
			padding-bottom 10px
			display inline-block
			font-size 14px
		&:hover
			color #4CBABA
			&:after
				position absolute
				top 50%
				width 10px
				height 6px
				right 25px
				background url('../images/general/nav-icon-second.svg') 0 0 / cover no-repeat
				background-size cover
				content ""
				transform translateY(-50%) rotate(180deg)
				+r($t)
					right -15px
		&:after
			position absolute
			top 50%
			width 10px
			height 6px
			right 25px
			background url('../images/general/nav-icon.svg') 0 0 / cover no-repeat
			background-size cover
			content ""
			transform translateY(-50%)
			tr(all .3s ease)
			+r($t)
				right -15px
.nav_second
	.nav__title
		margin-bottom 30px
		color #ffffff
		font-family $mM
		font-weight normal
		font-size 18px
		line-height 1.22222222222222
		text-transform uppercase
	.nav__list
		display block
		margin-bottom 0
		+r($m)
			display block
			text-align left
	.nav__list li
		margin-bottom 14px
		display block
		text-align left
	.nav__list a
		display block
		padding 0
		font-size 14px
		color #7f7f7f
		line-height 21px
		text-transform none
		text-decoration none
		&:hover
			color #4cbaba
			text-decoration none
		&:after
			display none
	.nav__item-date
		padding 0 2px
		display inline-block
		vertical-align top
		background-color #4cbaba
		color #fff
		font-size 14px
		line-height 1.4
.nav_third
	display block
	.nav__list
		margin-bottom 0
		font-size 0
		white-space nowrap
		text-align center
		+r($m)
			display block
	.nav__list li
		display inline-block
		vertical-align top
		&:last-child
			a
				padding-right 17px
	.nav__item_active
		a
			border-radius 5px
			border 2px solid #4cbaba
			background-color #ffffff
	.nav__list a
		border 2px solid transparent
		padding-top 10px
		padding-right 17px
		padding-bottom 11px
		padding-left 16px
		display block
		color #292929
		font-size 14px
		text-transform uppercase
		text-decoration none
		tr(all .3s ease)
		&:hover,
		&:focus
			color #292929
			text-decoration none
		+r($t)
			padding-right 6px
			padding-left 8px
			font-size 12px
		&:after
			display none
.subnav
	position absolute
	z-index 3
	top calc(100% + 6px)
	left 15px
	right 15px
	padding-top 30px
	padding-right 40px
	padding-bottom 30px
	padding-left 40px
	display none
	box-shadow 0 0 20px rgba(41, 41, 41, 0.2)
	background-color #ffffff
	clr()
	+r($dL)
		top calc(100% + -38px)
	+r($l)
		top 100%
	+r($t)
		position static
		padding-top 15px
		padding-right 20px
		padding-left 20px
		padding-bottom 15px
	&:before
		position absolute
		top -40px
		right 0
		left 0
		height 50px
		content ""
		background transparent
		+r($l)
			top -15px
			height 30px
.subnav__list
	margin 0
	display flex
	flex-flow column wrap
	width 100%
	max-height 645px
	clr()
	+r($d)
		max-width 100%
		flex-flow column wrap
		margin-right 0
		max-height 100%
	&:last-child
		margin-right 0
	.subnav__item
		margin-right 0
		margin-bottom 10px
		overflow hidden
		width 50%
		font-size 14px
		display inline-block
		vertical-align top
		+r($l)
			width 100%
			margin-right 0
			margin-bottom 0
			text-align left
		&:first-child
			margin-right 0
			margin-bottom 0px
			.subnav__link
				margin 0
				margin-bottom 0
				padding 0
				display block
				color #292929
				font-family $mM
				font-weight normal
				font-size 18px
				text-decoration underline
				text-transform uppercase
				+r($t)
					font-size 14px
				&:hover
					color #4cbaba
					text-decoration none
				&:only-of-type
					margin-bottom 10px
		&:nth-child(2n + 3)
			margin-right 0
	.subnav__link
		margin 0
		padding 0
		display block
		font-size 14px
		color #292929
		text-transform none
		+r($t)
			font-size 14px
		span
			color #7f7f7f
		&:hover
			color #4cbaba
			text-decoration none
		&:after
			display none
		&:only-of-type
			margin-bottom 10px
	.subnav__link-title
		margin 0
		margin-bottom 20px
		padding 0
		display block
		color #292929
		font-family $mM
		font-weight normal
		font-size 18px
		text-decoration underline
		text-transform uppercase
		&:hover
			color #4cbaba
			text-decoration none
		+r($t)
			font-size 14px
.subnav__subnav-list
	margin-bottom 0
	clear both
	display flex
	flex-flow row wrap
	flex-basis 50%
	align-items flex-start
	.subnav__subnav-item
		margin-bottom 10px
		padding-right 30px
		width 50%
		font-size 14px
		display inline-block
		vertical-align top
		&:first-child
			margin-bottom 0
			.subnav__subnav-link
				margin 0
				padding 0
				display block
				color #292929
				font-family $mM
				font-weight normal
				font-size 14px
				text-decoration none
				text-transform initial
				+r($t)
					font-size 14px
				&:hover
					color #4cbaba
					text-decoration none
				&:only-of-type
					margin-bottom 10px
		.subnav__subnav-link
			margin 0
			padding 0
			display block
			color #292929
			font-family $mM
			font-weight normal
			font-size 14px
			text-decoration none
			text-transform initial
			+r($t)
				font-size 14px
			&:hover
				color #4cbaba
				text-decoration none
			&:after
				display none
			span
				color #7f7f7f
		&:nth-child(2n + 3)
			margin-right 0
		+r($l)
			padding-right 0
			width 100%
			text-align left
